{
  "name": "@bancor/bancor-arbitrage",
  "version": "1.0.0",
  "description": "The Bancor Arbitrage Solidity contracts",
  "main": "index.js",
  "author": "Bancor Team",
  "scripts": {
    "build": "hardhat compile",
    "rebuild": "yarn clean && yarn build",
    "test": "forge test",
    "test:deploy": "yarn deploy:prepare:fork && TEST_FORK=1 ./deployments/run-fork.sh HARDHAT_NETWORK=tenderly mocha --require hardhat/register --extension ts --recursive --exit --timeout 600000 --bail --no-exit 'deploy/tests/**/*.ts'",
    "coverage": "forge coverage",
    "coverage:genhtml": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "gas-report": "forge test --gas-report",
    "export:storage": "yarn rebuild && hardhat run deployments/storage-layout.ts",
    "deploy:prepare": "rm -rf ./node_modules && rm yarn.lock && yarn && yarn rebuild",
    "deploy:prepare:fork": "rm -rf deployments/tenderly && cp -rf deployments/mainnet/. deployments/tenderly",
    "deploy:mainnet": "HARDHAT_NETWORK=mainnet hardhat deploy",
    "deploy:sepolia": "HARDHAT_NETWORK=sepolia hardhat deploy",
    "deploy:fork": "yarn deploy:prepare:fork && HARDHAT_NETWORK=tenderly hardhat deploy",
    "verify:mainnet": "HARDHAT_NETWORK=mainnet hardhat etherscan-verify --license None --force-license",
    "verify:sepolia": "HARDHAT_NETWORK=sepolia hardhat etherscan-verify --license None --force-license",
    "setup:fork": "yarn deploy:prepare:fork && ./deployments/run-fork.sh yarn run:fork deployments/setup-fork.ts",
    "setup:fork:main": "FORK_NAME=Main yarn setup:fork",
    "setup:fork:research": "FORK_NAME=Research FORK_RESEARCH=1 yarn setup:fork",
    "run:mainnet": "HARDHAT_NETWORK=mainnet hardhat run",
    "run:sepolia": "HARDHAT_NETWORK=sepolia hardhat run",
    "run:fork": "HARDHAT_NETWORK=tenderly hardhat run",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint --max-warnings 0 contracts/**/*.sol test/**/*.sol",
    "lint:ts": "yarn eslint components deploy utils",
    "format": "prettier --check --write test/**/*.sol contracts/**/*.sol components/**/*.ts deploy/**/*.ts --config .prettierrc",
    "clean": "rm -rf artifacts cache coverage typechain-types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bancorprotocol/bancor-arbitrage.git"
  },
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bancorprotocol/bancor-arbitrage/issues"
  },
  "homepage": "https://github.com/bancorprotocol/bancor-arbitrage#readme",
  "dependencies": {
    "hardhat": "^2.15.0"
  },
  "devDependencies": {
    "@anders-t/ethers-ledger": "^1.0.4",
    "@bancor/token-governance": "^0.1.8",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "4.9.2",
    "@openzeppelin/contracts-upgradeable": "4.9.2",
    "@tenderly/hardhat-tenderly": "1.1.6",
    "@typechain/ethers-v5": "^11.0.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/adm-zip": "^0.5.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai": "^4.3.7",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethers": "^5.4.7",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.34",
    "hardhat-deploy-tenderly": "^0.2.0",
    "hardhat-storage-layout": "^0.1.7",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "@tenderly/hardhat-tenderly/@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13"
  }
}
